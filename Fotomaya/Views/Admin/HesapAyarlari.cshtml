@model Fotomaya.Models.A_Foto
@{
    ViewBag.Title = "HesapAyarlari";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <hr />
                    <h2>Bilgileri Düzenle</h2>
                    <form action="/Admin/HesapAyarlari/@Session["AdminID"]" method="post" enctype="multipart/form-data">
                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Admin.admin_id)
                            @Html.HiddenFor(model => model.Admin.admin_kullaniciadi)
                            <table>
                                <tr>
                                    <td style="padding-bottom:150px">
                                        <div>
                                            @if (Model.foto_uzanti == null)
                                            {
                                                <img src="~/Images/user.png" width="300" />
                                            }
                                            else
                                            {
                                                <img src="@Model.foto_uzanti" width="300" />
                                            }
                                        </div>
                                        <hr />
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="file" name="imageUpload" accept="image/*" class="default" />
                                            </div>
                                        </div>
                                    </td>
                                    <td style="padding-left:100px">
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                Ad
                                                @Html.EditorFor(model => model.Admin.admin_ad, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;" } })
                                                @Html.ValidationMessageFor(model => model.Admin.admin_ad, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                Soyad
                                                @Html.EditorFor(model => model.Admin.admin_soyad, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;" } })
                                                @Html.ValidationMessageFor(model => model.Admin.admin_soyad, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                Email
                                                @Html.EditorFor(model => model.Admin.admin_email, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;" } })
                                                @Html.ValidationMessageFor(model => model.Admin.admin_email, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                Telefon
                                                @Html.EditorFor(model => model.Admin.admin_telefon, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;" } })
                                                @Html.ValidationMessageFor(model => model.Admin.admin_telefon, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="item form-group">
                                            <div class="col-sm-6 col-xs-12">
                                                Adres
                                                @Html.TextAreaFor(model => model.Admin.admin_adres, 3, 50, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                                                @Html.ValidationMessageFor(model => model.Admin.admin_adres, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                Şifre
                                                @Html.EditorFor(model => model.Admin.admin_sifre, new { htmlAttributes = new { @class = "form-control", @type = "password", @style = "width:300px;" } })
                                                @Html.ValidationMessageFor(model => model.Admin.admin_sifre, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                Şifre Tekrar
                                                @Html.EditorFor(model => model.Admin.admin_sifre_tekrar, new { htmlAttributes = new { @class = "form-control", @type = "password", @style = "width:300px;" } })
                                                @Html.ValidationMessageFor(model => model.Admin.admin_sifre_tekrar, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <br />
                                        <div class="container">
                                            <div class="col-md-offset-9">
                                                <input type="submit" value="Kaydet" class="btn btn-success" />
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                            <hr />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>