@model IEnumerable<Fotomaya.Models.Hizmet>
@{
    ViewBag.Title = "Hizmetler";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Hizmetler</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a href="/Admin/HizmetEkle"><input type="button" class="btn btn-success" value="Ekle" /></a>
                            </li>
                            <li>
                                <a class="collapse-link" align="right"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Hizmet ID</th>
                                    <th>Hizmet Başlık</th>
                                    <th>Hizmet Açıklama</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(model => item.hizmet_id)</td>
                                        <td>@Html.DisplayFor(model => item.hizmet_baslik)</td>
                                        <td>@Html.DisplayFor(model => item.hizmet_aciklama)</td>
                                        <td>
                                            <a href='@Url.Action("HizmetDuzenle","Admin", new { id=item.hizmet_id })' class="btn btn-success">Düzenle</a>
                                        </td>
                                        <td>
                                            <a href='@Url.Action("HizmetSil","Admin", new { id=item.hizmet_id })' class="btn btn-danger">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>