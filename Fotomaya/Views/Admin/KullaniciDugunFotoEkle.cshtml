@model IEnumerable<Fotomaya.Models.Kullanici>

@{
    ViewBag.Title = "KullaniciDugunFotoEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="right_col" role="main">

    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Site Ayarları</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <form action="/Admin/KullaniciDugunFotoEkle/" method="post" enctype="multipart/form-data" class="form-horizontal form-label-left">
                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div>
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="textarea">
                                        Fotoğraf <span class="required">*</span>
                                    </label>
                                    <div class="fileupload fileupload-new" data-provides="imageUpload">
                                        <span class="btn btn-white btn-file">
                                            <input type="file" name="imageUpload" accept="image/*" class="default" />
                                        </span>
                                        <span class="fileupload-preview" style="margin-left:5px;"></span>
                                        <a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none; margin-left:5px;"></a>
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="">
                                        Yükleme Tarihi <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input id="foto_yuklenme_tarih" value="@DateTime.Now" class="form-control col-md-7 col-xs-12" name="foto_yuklenme_tarih" required="required" type="text">
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="">
                                        Kullanıcı <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <select id="kullanici_id" class="form-control col-md-7 col-xs-12" name="kullanici_id" required="required" type="text">
                                            @foreach (var item in Model)
                                            {
                                                <option value="@item.kullanici_id">@item.kullanici_ad @item.kullanici_soyad</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="item form-group hidden">
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input id="kategori_id" value="2" class="form-control col-md-7 col-xs-12" name="kategori_id" required="required" type="text">
                                    </div>
                                </div>
                                <div class="item form-group hidden">
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input id="foto_durum_id" value="1" class="form-control col-md-7 col-xs-12" name="foto_durum_id" required="required" type="text">
                                    </div>
                                </div>
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-md-offset-3">
                                        <button formaction="/Admin/Dugun/" class="btn btn-primary">İptal</button>
                                        <button id="send" type="submit" class="btn btn-success">Kaydet</button>
                                    </div>
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>