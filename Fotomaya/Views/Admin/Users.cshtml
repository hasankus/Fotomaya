@model IEnumerable<Fotomaya.Models.Kullanici>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Kullanıcı Yönetimi</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a href="/Admin/KullaniciEkle"><input type="button" class="btn btn-success" value="Ekle" /></a>
                            </li>
                            <li>
                                <a class="collapse-link" align="right"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Kullanıcı ID</th>
                                    <th>Kullanıcı Ad</th>
                                    <th>Kullanıcı Soyad</th>
                                    <th>Kullanıcı Telefon</th>
                                    <th>Kullanıcı Email</th>
                                    <th>Kullanıcı Adres</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(model => item.kullanici_id)</td>
                                        <td>@Html.DisplayFor(model => item.kullanici_ad)</td>
                                        <td>@Html.DisplayFor(model => item.kullanici_soyad)</td>
                                        <td>@Html.DisplayFor(model => item.kullanici_telefon)</td>
                                        <td>@Html.DisplayFor(model => item.kullanici_email)</td>
                                        <td>@Html.DisplayFor(model => item.kullanici_adres)</td>
                                        <td>
                                            <a href='@Url.Action("KullaniciDuzenle","Admin", new { id=item.kullanici_id })' class="btn btn-success">Düzenle</a>
                                        </td>
                                        <td>
                                            <a href='@Url.Action("KullaniciSil","Admin", new { id=item.kullanici_id })' class="btn btn-danger">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
