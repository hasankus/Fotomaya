@model Fotomaya.Models.K_Foto
@{
    ViewBag.Title = "Hesabim";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}

<div class="site-blocks-cover overlay" style="background-image: url(https://images.hindustantimes.com/img/2021/08/19/1600x900/patrick-dozkVhDyvhQ-unsplash_1628163163817_1629346849962.jpg); " data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-12">
            </div>
        </div>
    </div>
</div>

<div class="container">
    <hr />
    <h2 style="text-align:center;">Bilgilerini Düzenle</h2>
    <form action="/Home/Hesabim/@Session["KullaniciID"]" method="post" enctype="multipart/form-data">
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Kullanici.kullanici_id)
            <table>
                <tr>
                    <td style="padding-bottom:300px">
                        <div>
                            @if (Model.foto_uzanti != null)
                            {
                                <img src="@Model.foto_uzanti" width="300" />
                            }
                            else
                            {
                                <img src="~/Images/user.png" width="300" />
                            }
                        </div>
                        <hr />
                        <div class="form-group">
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="file" name="imageUpload" accept="image/*" class="default" />
                                </div>
                            </div>
                        </div>
                    </td>
                    <td style="padding-left:100px">
                        <div class="form-group">
                            <div class="col-md-10">
                                Ad
                                @Html.EditorFor(model => model.Kullanici.kullanici_ad, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;", @autofocus="true" } })
                                @Html.ValidationMessageFor(model => model.Kullanici.kullanici_ad, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                Soyad
                                @Html.EditorFor(model => model.Kullanici.kullanici_soyad, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;" } })
                                @Html.ValidationMessageFor(model => model.Kullanici.kullanici_soyad, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                Email
                                @Html.EditorFor(model => model.Kullanici.kullanici_email, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;" } })
                                @Html.ValidationMessageFor(model => model.Kullanici.kullanici_email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                Telefon
                                @Html.EditorFor(model => model.Kullanici.kullanici_telefon, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;" } })
                                @Html.ValidationMessageFor(model => model.Kullanici.kullanici_telefon, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="item form-group">
                            <div class="col-sm-6 col-xs-12">
                                Adres
                                @Html.TextAreaFor(model => model.Kullanici.kullanici_adres, 3, 39, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                                @Html.ValidationMessageFor(model => model.Kullanici.kullanici_adres, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                Şifre
                                @Html.EditorFor(model => model.Kullanici.kullanici_sifre, new { htmlAttributes = new { @class = "form-control", @type = "password", @style = "width:300px;" } })
                                @Html.ValidationMessageFor(model => model.Kullanici.kullanici_sifre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                Şifre Tekrar
                                @Html.EditorFor(model => model.Kullanici.kullanici_sifre_tekrar, new { htmlAttributes = new { @class = "form-control", @type = "password", @style = "width:300px;" } })
                                @Html.ValidationMessageFor(model => model.Kullanici.kullanici_sifre_tekrar, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Kaydet" class="btn btn-default" />
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
            <hr />
        </div>
    </form>
</div>