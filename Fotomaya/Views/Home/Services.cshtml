@model IEnumerable<Fotomaya.Models.Hizmet>
@{
    ViewBag.Title = "Services";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}

<div class="site-blocks-cover overlay" style="background-image: url(https://images.hindustantimes.com/img/2021/08/19/1600x900/patrick-dozkVhDyvhQ-unsplash_1628163163817_1629346849962.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-12">
                <h1>Neler Yapıyoruz?</h1>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-light">
    <div class="container">
        <div class="slide-one-item home-slider owl-carousel">
            @foreach (var item in Model)
            {
                <div>
                    <div class="testimonial">
                        <figure class="mb-4">
                            <h3>@item.hizmet_baslik</h3>
                        </figure>
                        <hr />
                        <blockquote>
                            <p>@item.hizmet_aciklama</p>
                        </blockquote>
                    </div>
                </div>
            }
        </div>
    </div>
</div>