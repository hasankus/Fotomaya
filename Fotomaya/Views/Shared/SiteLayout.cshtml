<!DOCTYPE html>
<html lang="en">
<head>
    <title>Fotomaya</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com//directoryads/css?family=Nanum+Gothic:400,700,800" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Site/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/Content/Site/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/Site/css/magnific-popup.css">
    <link rel="stylesheet" href="~/Content/Site/css/jquery-ui.css">
    <link rel="stylesheet" href="~/Content/Site/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/Site/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Content/Site/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/Content/Site/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="~/Content/Site/css/aos.css">
    <link rel="stylesheet" href="~/Content/Site/css/rangeslider.css">
    <link rel="stylesheet" href="~/Content/Site/css/style.css">

</head>
<body>
    <div class="site-wrap">
        <div class="site-mobile-menu">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>

        <header class="site-navbar container py-0 " role="banner">
            <!-- <div class="container"> -->
            <div class="row align-items-center">

                <div class="col-6 col-xl-2">
                    <h1 class="mb-0 site-logo"><a href="/Home/Index" class="text-white mb-0">Fotomaya</a></h1>
                </div>
                <div class="col-12 col-md-10 d-none d-xl-block">
                    <nav class="site-navigation position-relative text-right" role="navigation">
                        <ul class="site-menu js-clone-nav mr-auto d-none d-lg-block">
                            <li class="active">@Html.ActionLink("Anasayfa", "Index", "Home")</li>
                            <li>@Html.ActionLink("Hakkımızda", "About", "Home")</li>
                            <li>@Html.ActionLink("Hizmetler", "Services", "Home")</li>
                            <li>@Html.ActionLink("İletişim", "Contact", "Home")</li>
                            @if (Session["KullaniciAd"] == null)
                            {
                                <li class="ml-xl-3 login">@Html.ActionLink("Giriş Yap", "Index", "HomeLogin")</li>
                                <li><a href="/HomeLogin/Kaydol" class="cta"><span class="bg-primary text-white rounded">Kaydol</span></a></li>
                            }
                            else
                            {
                                <li>
                                    <img src="~/Images/user.png" width="30" />
                                    <a style="color:white;" href="#" class="dropdown-toggle" data-toggle="dropdown">Merhaba @Session["KullaniciAd"]</a>
                                    <ul class="dropdown-menu bg-transparent">
                                        <li>@Html.ActionLink("Hesabım", "Hesabim", "Home", new { id = Session["KullaniciID"] }, new { @style = "color:white;" })</li>
                                        <li>@Html.ActionLink("Fotoğraflarım", "KullaniciFoto", "Home", new { id = Session["KullaniciID"] }, new { @style = "color:white; text-decoration:none;" })</li>
                                        <li>@Html.ActionLink("Çıkış Yap", "LogOut", "HomeLogin", new { model = Model }, new { @style = "color:white;text-decoration:none;" })</li>
                                    </ul>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>

                <div class="d-inline-block d-xl-none ml-auto py-3 col-6 text-right" style="position: relative; top: 3px;">
                    <a href="#" class="site-menu-toggle js-menu-toggle text-white"><span class="icon-menu h3"></span></a>
                </div>
            </div>

        </header>


        @RenderBody()


        <footer class="site-footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-6">
                                <h2 class="footer-heading mb-4">Hakkımızda</h2>
                                <p>Lorem ipsum dolor sit amet</p>
                            </div>

                            <div class="col-md-3">
                                <h2 class="footer-heading mb-4">Gezinti</h2>
                                <ul class="list-unstyled">
                                    <li><a href="#">Hakkımızda</a></li>
                                    <li><a href="#">Hizmetler</a></li>
                                    <li><a href="#">Referanslar</a></li>
                                    <li><a href="#">İletişim</a></li>
                                </ul>
                            </div>

                            <div class="col-md-3">
                                <h2 class="footer-heading mb-4">Bizi Takip Edin</h2>
                                <a href="#" class="pl-0 pr-3"><span class="icon-facebook"></span></a>
                                <a href="#" class="pl-3 pr-3"><span class="icon-twitter"></span></a>
                                <a href="#" class="pl-3 pr-3"><span class="icon-instagram"></span></a>
                                <a href="#" class="pl-3 pr-3"><span class="icon-linkedin"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row pt-5 mt-5 text-center">
                    <div class="col-md-12">
                        <div class="border-top pt-5">
                            <p>
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                                Copyright &copy;
                                <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="icon-heart" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </footer>
    </div>
    <script src="~/Content/Site/js/jquery-3.3.1.min.js"></script>
    <script src="~/Content/Site/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/Content/Site/js/jquery-ui.js"></script>
    <script src="~/Content/Site/js/popper.min.js"></script>
    <script src="~/Content/Site/js/bootstrap.min.js"></script>
    <script src="~/Content/Site/js/owl.carousel.min.js"></script>
    <script src="~/Content/Site/js/jquery.stellar.min.js"></script>
    <script src="~/Content/Site/js/jquery.countdown.min.js"></script>
    <script src="~/Content/Site/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/Site/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Content/Site/js/aos.js"></script>
    <script src="~/Content/Site/js/rangeslider.min.js"></script>
    <script src="~/Content/Site/js/main.js"></script>

</body>
</html>